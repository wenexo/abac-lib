{
  "name": "@wenex/abac-lib",
  "version": "0.0.0",
  "description": "ABAC library for microservice architectures.",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "tslint -p tsconfig.json",
    "doc": "typedoc --out docs src",
    "prepare": "npm run build",
    "debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register example/example.ts",
    "example": "node -r tsconfig-paths/register -r ts-node/register example/example.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenexo/abac-lib.git"
  },
  "keywords": [
    "abac"
  ],
  "author": "Vahid V.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wenexo/abac-lib/issues"
  },
  "homepage": "https://github.com/wenexo/abac-lib#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>/"
    ],
    "testRegex": "[.]spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
